<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

<class name="Bank" table="BANK_TABLE">

<id name="id" column="ID">
	<generator class="native"/>
</id>


<list name="wheels"
       cascade="all"
       lazy="true">
	<key column="WHEEL_LIST"/>
	<index column="idx" />
	<one-to-many class="Wheel"/>
</list>

<many-to-one name="spareTire"
     		 cascade="all"
			 column="SPARE_TIRE"
			 lazy="false"
			 class="Wheel"/>
			 
</class>

</hibernate-mapping>